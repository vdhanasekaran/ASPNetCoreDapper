@model Employee
@{
    ViewData["Title"] = "EditEmployee";
}
<h4>Update the Employee</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditEmployee">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="EmployeeName" class="control-label"></label>
                <input asp-for="EmployeeName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="EmployeeDesignation" class="control-label"></label>
                <input asp-for="EmployeeDesignation" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Contact" class="control-label"></label>
                <input asp-for="Contact" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DOJ" class="control-label"></label>
                <input asp-for="DOJ" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Edit Employee" class="btn btn-success btn-sm" />
            </div>
        </form>
    </div>
    <div class="col-md-8">

    </div>
</div>
<div>
    <a asp-action="Index">Back To Home</a>
</div>